<% if @post[:errors].present? %>
  <div class="alert alert-danger" role="alert">
    Hubo errores al crear el post
  </div>
<% end %>

<%= form_tag '/posts', method: 'post' do %>
  <%= label_tag :title %>
  <br/>
  <%= text_field_tag :title %>
  <br/>
  <br/>
  <%= label_tag :content %>
  <br/>
  <%= text_area_tag :content %>
  <br/>
  <br/>
  <br/>
  <%= submit_tag 'Submit', class: 'submit' %>
<% end %>
