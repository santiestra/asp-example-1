<%= form_with(model: post) do |form| %>
  <%= form.label :title %>
  <br/>
  <%= form.text_field :title, autofocus: true %>
  <br/>
  <br/>
  <%= form.label :content %>
  <br/>
  <%= form.text_area :content %>
  <br/>
  <br/>
  <%= form.label :category %>
  <br/>
  <%= form.select(:category_id, @categories.map { |category| [category.description, category.id]}) %>
  <br/>
  <br/>
  <%= form.submit 'Submit', class: 'submit' %>
<% end %>
